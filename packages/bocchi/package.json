{
  "name": "bocchi",
  "description": "A cli build tool for userscript",
  "version": "1.3.1",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "release": "pnpm run build && npm publish",
    "lint": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IronKinoko/bocchi.git",
    "directory": "packages/bocchi"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "bocchi": "./dist/cli.js"
  },
  "files": [
    "dist",
    "env.d.ts"
  ],
  "keywords": [
    "userscript",
    "cli",
    "greasemonkey",
    "tampermonkey",
    "violentmonkey"
  ],
  "author": "IronKinoko <kinoko_main@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IronKinoko/bocchi/issues"
  },
  "homepage": "https://github.com/IronKinoko/bocchi#readme",
  "dependencies": {
    "@ironkinoko/rollup-plugin-styles": "^4.0.4",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^25.2.0",
    "chalk": "^5.6.2",
    "esbuild": "^0.27.2",
    "fs-extra": "^11.3.3",
    "node-html-parser": "^7.0.2",
    "pretty-ms": "^9.3.0",
    "rollup": "^4.57.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "sass": "^1.97.3",
    "slash": "^5.1.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/yargs": "^17.0.35"
  }
}
